<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="1">

    <EditText
        android:id="@+id/reset_edit_username"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:ems="10"
        android:hint="请输入您的用户名"
        android:inputType="text" />

    <EditText
        android:id="@+id/reset_edit_teleno"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/reset_edit_username"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:ems="10"
        android:hint="请输入您绑定的手机号码"
        android:inputType="text" />

    <EditText
        android:id="@+id/reset_edit_code"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/reset_edit_teleno"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:ems="10"
        android:hint="填写获得的验证码"
        android:inputType="text" />

    <EditText
        android:id="@+id/reset_edit_new"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/reset_edit_code"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:ems="10"
        android:hint="请输入您的新密码"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/reset_edit_repeat"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/reset_edit_new"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:ems="10"
        android:hint="请确认您的新密码"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/reset_button_code"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reset_edit_new"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="120dp"
        android:background="#1cf718"
        android:text="发送验证码"
        android:textSize="20dp" />

    <Button
        android:id="@+id/reset_button_sure"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reset_button_code"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:background="#f71818"
        android:text="确认重置"
        android:textSize="20dp" />

    <Button
        android:id="@+id/reset_button_cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reset_button_sure"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:background="#00BCD4"
        android:text="取消"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/reset_checkbox_display"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_below="@+id/reset_edit_repeat"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:checked="false"
        android:text="显示密码"
        android:textSize="15dp" />

</RelativeLayout>
