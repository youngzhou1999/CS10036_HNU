<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="1">

    <EditText
        android:id="@+id/register_edit_username"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:drawableLeft="@android:drawable/ic_menu_myplaces"
        android:ems="10"
        android:hint="请输入您的用户名"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/register_edit_name"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/register_edit_username"
        android:drawableLeft="@android:drawable/ic_menu_edit"
        android:ems="10"
        android:hint="请输入您的姓名"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/register_edit_age"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/register_edit_name"
        android:drawableLeft="@android:drawable/ic_menu_recent_history"
        android:ems="10"
        android:hint="请输入您的年龄"
        android:inputType="number" />

    <EditText
        android:id="@+id/register_edit_teleno"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/register_edit_age"
        android:drawableLeft="@android:drawable/ic_menu_call"
        android:ems="10"
        android:hint="电话号码（可用于找回密码）"
        android:inputType="number" />

    <EditText
        android:id="@+id/register_edit_pass"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/register_edit_teleno"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:ems="10"
        android:hint="请输入您的密码"
        android:inputType="textPassword" />


    <EditText
        android:id="@+id/register_edit_pass_confirm"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/register_edit_pass"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:ems="10"
        android:hint="请确认您的密码"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/register_btn_sure"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_edit_pass_confirm"
        android:layout_marginTop="20dp"
        android:background="#1cf718"
        android:text="确定"
        android:textSize="20dp" />

    <Button
        android:id="@+id/register_btn_cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_btn_sure"
        android:layout_marginTop="10dp"
        android:background="#f71818"
        android:text="取消"
        android:textSize="20dp" />
</RelativeLayout>
